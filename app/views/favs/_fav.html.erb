<div class="col-12">
  <span class="fav">
  <% if post.fav?(current_user) %>
    <%= form_for(post.favs.find_by(user_id: current_user.id), method: :delete, remote: true) do |f| %>
      <%= button_tag(class: "btn btn-default btn-xs") do %>
        <i class="fas fa-star fa-2x"></i>
      <% end %>
    <% end %>
  <% else %>
    <%= form_for(post.favs.build, remote: true) do |f| %>
      <div><%= hidden_field_tag :post_id, post.id %></div>
      <%= button_tag(class: "btn btn-default btn-xs") do %>
        <i class="far fa-star fa-2x"></i>
      <% end %>
    <% end %>
  <% end %>
  </span>
</div>

