<div class="row">
  <div class="col-12 col-md-6 offset-md-3">
    <h2>Register</h2>
  <%= form_for @user, url: signup_path, html: {class: 'form-horizontal'} do |u| %>
    <%= render 'shared/error_messages' %>

    <div class="form-group">
      <%= u.label :name, "Name", class: 'control-label' %>
      <div>
        <%= u.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= u.label :email, "E-mail", class: 'control-label' %>
      <div>
        <%= u.text_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= u.label :password, "Password", class: 'control-label' %>
      <div>
        <%= u.password_field :password, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= u.label :password_confirmation, "Password(confirmation)", class: 'control-label' %>
      <div>
        <%= u.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= u.submit "Submit", class: "btn btn-primary" %>
    </div>

  <% end %>
  </div>
</div>
